@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@{
    Layout = "_master.cshtml";
}

@section PAGEHEADER{
    <div class="pageheader">
        <h2><i class="fa fa-building"></i> @Text.words.Companies <span>@Text.phrases.Companies_Title</span></h2>
    </div>
}

<div class="row">
    <a href="#" class="btn btn-success mr5 pull-right" data-toggle="modal" data-target=".new-reseller-modal">@Text.words.Add</a>
</div>

<div class="mb30"></div>

<div class="row">
    <table id="companiesDataTable" class="table table-hover mb30">
        <thead>
            <tr>
                <th>@Text.words.Name</th>
                <th>@Text.words.Address</th>
                <th>@Text.words.Created</th>
                <th style="width: 10%"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Loading data from server</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>

@section CUSTOMJAVASCRIPT {
<script src="~/Content/js/jquery.validate.min.js"></script>
<script src="~/Content/js/jquery.datatables.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#companiesDataTable").dataTable({
            "bProcessing": true,
            "bStateSave": false,
            "bServerSide": true,
            "bJQueryUI": false,
            "bFilter": true,
            "bLengthChange": true,
            "sPaginationType": "full_numbers",
            "sAjaxSource": "@Url.Content("~/ajax/reseller/" + Model + "/companies")",
            "aoColumns": [
                {
                    "mData": "companyName", "sTitle": "@Text.words.Name", "bSortable": true, "mRender": function (data, type, full) {
                        return "<a href=\"" + @Url.Content("~/Company/") +full["companyCode"] + "\">" + data + "</a>";
                    }
                },
                { "mData": "fullAddressFormatted", "sTitle": "Address", "bSortable": false },
                { "mData": "created", "sTitle": "Created", "bSortable": false },
                {
                    "mData": "companyCode", "bSortable": false, "bSearchable": false, "mRender": function (data, type, full) {
                        return "<div class='btn-group pull-right'>" +
                                    "<a href='#' class='btn btn-xs btn-orange'>Modify</a>" +
                                    "<button type='button' class='btn btn-xs btn-orange dropdown-toggle' data-toggle='dropdown'>" +
                                        "<span class='caret'></span>" +
                                        "<span class='sr-only'>Toggle Dropdown</span>" +
                                    "</button>" +
                                    "<ul class='dropdown-menu' role='menu'>" +
                                    "<li>" +
                                        "<a href='#' id='deleteCompany' data-toggle='modal' data-target='#deleteModal' data-id='" + data + "' data-name='" + full["companyName"] + "'>Delete</a>" +
                                    "</li>" +
                                    "</ul>" +
                                    "</div>";
                    }
                },
            ]
        });

        // Chosen Select
        jQuery("select").chosen({
            'min-width': '200px',
            'white-space': 'nowrap',
            disable_search_threshold: 10
        });
    });

</script>
}